\newcommand{\pgfmathsinandcos}[3]{ % Calculate sin and cos
	\pgfmathsetmacro{#1}{sin(#3)}
	\pgfmathsetmacro{#2}{cos(#3)}
}
\newcommand\LongitudePlane[4][current plane]{%
	\pgfmathsinandcos{\sinEl}{\cosEl}{#2} 	% Elevation
	\pgfmathsinandcos{\sinAz}{\cosAz}{#3}	% Azimuth
	\pgfmathsinandcos{\sinLon}{\cosLon}{#4}	% Longitude
	\tikzset{#1/.style={cm={{\sinAz*\cosLon + \cosAz*\sinLon},{-\cosAz*\sinEl*\cosLon + \sinAz*\sinEl*\sinLon},0,{\cosEl},(0,0)}}}
}
\newcommand\DrawLongitudeCircle[4][1]{
  \LongitudePlane{#2}{#3}{#4}
   % angle of "visibility"
  \pgfmathsetmacro\angVis{atan(sin(#4)*cos(#2)/sin(#2))} %
  \draw[current plane] (\angVis: {#1}) arc (\angVis:\angVis+180: {#1});
  \draw[current plane,dashed] (\angVis-180: {#1}) arc (\angVis-180:\angVis: {#1});
}
\newcommand\LatitudePlane[5][current plane]{%
	\pgfmathsinandcos{\sinEl}{\cosEl}{#3}	% Elevation
	\pgfmathsinandcos{\sinAz}{\cosAz}{#4}	% Azimuth
	\pgfmathsinandcos{\sinLat}{\cosLat}{#5} % Latitude
	\tikzset{#1/.style={cm={\sinAz,-\cosAz*\sinEl,\cosAz,\sinAz*\sinEl,(0,{(#2)*\cosEl*\sinLat})}}} %
}
\newcommand\YLatitudePlane[5][current plane]{%
	\pgfmathsinandcos{\sinEl}{\cosEl}{#3}	% Elevation
	\pgfmathsinandcos{\sinAz}{\cosAz}{#4}	% Azimuth
	\pgfmathsinandcos{\sinLat}{\cosLat}{#5} % Latitude
	\tikzset{#1/.style={cm={\sinAz,-\cosAz*\sinEl,0,\cosEl,({(#2)*\cosAz*\sinLat},{(#2)*\sinAz*\sinEl*\sinLat})}}}
}
\newcommand\XLatitudePlane[5][current plane]{%
	\pgfmathsinandcos{\sinEl}{\cosEl}{#3}	% Elevation
	\pgfmathsinandcos{\sinAz}{\cosAz}{#4}	% Azimuth
	\pgfmathsinandcos{\sinLat}{\cosLat}{#5} % Latitude
	\tikzset{#1/.style={cm={\cosAz,\sinAz*\sinEl,0,\cosEl,({(#2)*\sinAz*\sinLat},{-(#2)*\cosAz*\sinEl*\sinLat})}}}
}
\newcommand\DrawXLatitudeCircle[4][1]{
  \XLatitudePlane{#1}{#2}{#3}{#4}
  \pgfmathsetmacro\sinVis{sin(#4)/cos(#4)*sin(#2)/cos(#2)}
  % angle of "visibility"
  \pgfmathsetmacro\angVis{asin(min(1,max(\sinVis,-1)))}
  \draw[current plane] (\angVis:{(#1)*cos(#4)}) arc (\angVis:-\angVis-180:{(#1)*cos(#4)});
  \draw[current plane,dashed] (180-\angVis:{(#1)*cos(#4)}) arc (180-\angVis:\angVis:{(#1)*cos(#4)});
}
\newcommand\DrawYLatitudeCircle[4][1]{
  \YLatitudePlane{#1}{#2}{#3}{#4}
  \pgfmathsetmacro\sinVis{sin(#4)/cos(#4)*sin(#2)/cos(#2)}
  % angle of "visibility"
  \pgfmathsetmacro\angVis{asin(min(1,max(\sinVis,-1)))}
  \draw[current plane] (\angVis:{(#1)*cos(#4)}) arc (\angVis:-\angVis-180:{(#1)*cos(#4)});
  \draw[current plane,dashed] (180-\angVis:{(#1)*cos(#4)}) arc (180-\angVis:\angVis:{(#1)*cos(#4)});
}
\newcommand\DrawLatitudeCircle[4][1]{
	\LatitudePlane{#1}{#2}{0}{#4} % To make calulations easiear assume \angAz=0.
    \begin{scope}[thin]
	\clip[current plane] ({(#1)*tan(#2)*sin(#4)}, {-2*(#1)}) rectangle ({2*(#1)}, {2*(#1)});
	\draw[current plane] (0,0) circle ({(#1)*cos(#4)});
	\end{scope}
	\begin{scope}[thin]
	\draw[current plane] ({-2*(#1)},{-2*(#1)}) rectangle ({(#1)*tan(#2)*sin(#4)},{2*(#1)});
	\draw[current plane, dashed] (0,0) circle ({(#1)*cos(#4)});
	\end{scope}
}
