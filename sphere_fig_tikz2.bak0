\tikzset{yzplane/.style={cm={cos(\angAz), sin(\angAz)*sin(\angEl), 0, cos(\angAz), (0,0)}}}
\tikzset{xzplane/.style={cm={sin(\angAz), -cos(\angAz)*sin(\angEl), 0, cos(\angAz), (0,0)}}}
